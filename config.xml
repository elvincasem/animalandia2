<?xml version="1.0" encoding="UTF-8" ?>
    
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.animalandia.www"
        versionCode = "1" 
        version     = "1.5.0" >
        <name>Exploring Animalandia</name>
        <description>
            Mobile Game for toddlers
        </description>
        <author>
            Judy Ann Balesteros, Joyce Ana Bulatao, Lyn Carlos, Jessica Difuntorum, Maridel Garcia
        </author>

        <content src="index.html" />
        <access origin="*" />
		<allow-navigation href="*" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="ldpi" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="mdpi" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="hdpi" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="xhdpi" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="xxhdpi" />
        <icon src="96px.png" gap:platform="android" gap:qualifier="fr-xxhdpi" />
		<preference name="debuggable" value="false"/>
		<plugin name="cordova-plugin-whitelist" spec="1.3.0" source="npm" />
		<plugin name="cordova-plugin-inappbrowser" spec="1.5.0" source="npm" />
		<plugin name="cordova-plugin-splashscreen" spec="4.0.0" source="npm" />
		<plugin name="cordova-plugin-device" spec="1.1.3" source="npm" />
</widget>

